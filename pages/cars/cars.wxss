page {
	/* height: 100%; */
}
 ._header_title {
    width: 100%;
    height: 50px;
    line-height: 50px;
    background: white;
  }
  ._header_title .text {
      float: left;
      box-sizing: border-box;
      margin-left: 10px;
    }
  ._section{
    width: 100%;
    background: #ffffff;
    position: relative;
 }
 ._section ._baoMaCar {
   width: 100%;
   height: 50px;
   display: flex;
   justify-content: space-between;
   align-items: center;
 }
._section ._baoMaCar::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  border-top: 1px solid #dcdcdc;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 200%;
  height: 1px;
  transform: scale(0.5);
  transform-origin: left top;
}
._section ._baoMaCar ._baoMaCarTitle {
   margin-left: 15px;
 }
._section ._baoMaCar ._baoMaCarArrow {
   font-size: 18px;
   color: #333333;
   margin-right: 15px;
}
._section ._baoMaCar ._baoMaCarArrow image{
  width: 15px;
  height: 8px;
}
._section ._baoMaCarChildBox {
  background: white;
  width: 100%;
}
._section ._baoMaCarChildBox ._baoMaCarChild {
  height: 40px;
  margin-left: 15px;
  line-height: 40px;
  font-size: 15px;
  color: #666666;
}
.list-mask {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 40;
  backdrop-filter: blur(10px);
  opacity: 1;
  background: rgba(7, 17, 27, 0.6);
}
.list-mask.fade-enter-active, .list-mask.fade-leave-active {
  transition: all 0.5s;
}
.list-mask.fade-enter,.list-mask.fade-leave-to {
  opacity: 0;
  background: rgba(7, 17, 27, 0);
}
.list-mask.logo {
  position: absolute;
  right: 10px;
  top: 10px;
  color: white;
  font-size: 15px;
}
.youhuijia {
  width: 100%;
  position: fixed;
  z-index: 90000;
  background-color: white;
  display: flex;
  flex-direction: column;
  bottom:0px;
}
.youhuijia .title {
  height:45px;
  line-height:45px;
  font-size: 16px;
  color: #000000;
  width: 100%;
  text-align:center;
  background-color:#ffe45f;
}
.youhuijia .shuru {
  margin: 58px auto 30px auto;
  width: 90%;
}
.youhuijia .shuru .input {
  border: 1px solid rgb(220,220,220);
  font-size: 14px;
  color: #d2d2d2;
  height: 40px;
  line-height: 40px;
  width: 100%;
  border-radius: 5px;
  text-indent: 1em;
}
.youhuijia button{
  width: 90%;
  margin: 10px auto 10px auto;
  background: #ffe45f;
  color: #000000;
  height:45px;
  line-height:45px;
  font-size: 16px;
}
.tabBar{
  width:100%;
  display:flex;
  justify-content: space-between;
  height:87rpx;
  background:#fff5cc;
  position:fixed;
  z-index:10;
  bottom:0px;
  align-content: center;
  text-align:center;
  line-height:87px;
  color:#333333;
}
.tabBar .left{
  width:50%;
  height:87px;
  line-height:87rpx;
}
.tabBar .right{
  width: 50%;
  height:87px;
  line-height:87rpx;
}
.tabBar .active{
  width:50%;
  height:87px;
  line-height:87rpx;
  background:#ffda43;
  color:rgb(0,0,0);
}